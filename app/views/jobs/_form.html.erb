<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :category %>
  <%= f.collection_select :category_id, @category.order(:title), :id, :title %>

  <%= f.submit %>
<% end %>

<p><%= link_to "Home", root_path, class: "button" %></p>
