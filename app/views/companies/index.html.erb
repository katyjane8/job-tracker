<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>All Companies</title>
  </head>
    <body>
      <h3>All Companies</h3>
      <h4><%= link_to "Add a company here!", new_company_path %></h4>
          <ul class="company-container">
          <% @companies.each do |company| %>
            <h4><%= link_to company.name, company_path(company) %>:</h4>
            <div class="btn-yellow">
            <p><%= link_to "Edit", edit_company_path(company) %>
            <%= link_to "Delete", company_path(company), method: "delete" %></p></div>
          <% end %>
          </ul>
    </body>
</html>
